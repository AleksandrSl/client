{
  "name": "@logux/client",
  "version": "0.5.2",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "api": "documentation build *.js -f md -o api.md",
    "spell": "yarn api && yaspeller *.md",
    "clean": "rimraf api.md coverage/ test/demo/build/ test/demo/.cache",
    "test": "jest --coverage && eslint . && size-limit && yarn spell && yarn build",
    "build": "parcel build --experimental-scope-hoisting -d ./test/demo/build --cache-dir ./test/demo/.cache --public-url ./ ./test/demo/index.html",
    "start": "parcel serve -d ./test/demo/build --cache-dir ./test/demo/.cache ./test/demo/index.html --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "dependencies": {
    "@logux/core": "^0.3.5",
    "browser-supports-log-styles": "^1.1.7",
    "nanoevents": "^2.0.0",
    "nanoid": "^2.1.11"
  },
  "devDependencies": {
    "@logux/eslint-config": "^35.0.4",
    "@logux/sharec-config": "^0.5.7",
    "@size-limit/preset-small-lib": "^4.0.1",
    "clean-publish": "^1.1.4",
    "documentation": "^12.1.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.0.0",
    "fake-indexeddb": "^3.0.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "nanodelay": "^0.1.4",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "size-limit": "^4.0.1",
    "svgo": "^1.3.2",
    "yaspeller": "^6.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.svg": "svgo",
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser"
  },
  "eslintIgnore": [
    "test/demo/build"
  ],
  "size-limit": [
    {
      "path": "cross-tab-client.js",
      "limit": "9 KB"
    },
    {
      "path": [
        "attention.js",
        "confirm.js",
        "favicon.js",
        "status.js",
        "badge.js",
        "log.js",
        "badge/en.js",
        "badge/default.js"
      ],
      "limit": "3 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "clientId",
      "ClientNode",
      "CrossTabClient",
      "DevTools",
      "favicon",
      "GraphQL",
      "IndexedStore",
      "Logux",
      "logux",
      "nanoevents",
      "nodeId",
      "reconnection",
      "reconnections",
      "SemVer",
      "statusReceiver",
      "subprotocol",
      "TestTime",
      "UI",
      "UX",
      "Versioning",
      "ws",
      "resubscribe",
      "resubscriptions",
      "tabId",
      "io"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.7"
  }
}
