{
  "name": "@logux/client",
  "version": "0.9.1",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "spell": "yaspeller *.md",
    "clean": "rimraf api.md coverage/ test/demo/build/ test/demo/.cache",
    "test": "jest --coverage && eslint . && check-dts && size-limit && yarn spell && yarn build",
    "build": "parcel build --experimental-scope-hoisting -d ./test/demo/build --cache-dir ./test/demo/.cache --public-url ./ ./test/demo/index.html",
    "start": "parcel serve -d ./test/demo/build --cache-dir ./test/demo/.cache ./test/demo/index.html --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@logux/core": "^0.6.0",
    "nanoevents": "^5.1.8",
    "nanoid": "^3.1.10"
  },
  "devDependencies": {
    "@logux/eslint-config": "^39.0.3",
    "@logux/sharec-config": "^0.7.3",
    "@size-limit/dual-publish": "^4.5.2",
    "@size-limit/preset-small-lib": "^4.5.2",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "check-dts": "^0.3.2",
    "dual-publish": "^0.10.6",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettierx": "^0.12.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "fake-indexeddb": "^3.0.2",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "kleur": "^4.0.1",
    "lint-staged": "^10.2.11",
    "nanodelay": "^1.0.3",
    "parcel-bundler": "^1.12.4",
    "print-snapshots": "^0.3.2",
    "rimraf": "^3.0.2",
    "size-limit": "^4.5.2",
    "svgo": "^1.3.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.svg": "svgo"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "overrides": [
      {
        "files": "indexed-store/index.test.ts",
        "rules": {
          "import/order": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "test/demo/build",
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "9 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }",
        "./badge/styles/index.js": "{ badgeStyles }"
      },
      "limit": "3 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "logux",
      "resubscriptions",
      "resubscribe",
      "GraphQL",
      "UI",
      "UX",
      "DevTools",
      "io",
      "ES",
      "JSDoc",
      "TypeDoc",
      "WebSocket",
      "roadmap"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.3"
  }
}
